<% provide(:title, "Sign-in") %>
<!-- sign in form -->
   <section>
    <div id="agileits-sign-in-page" class="sign-in-wrapper" style="background-image: url(<%= asset_path 'account-bg.jpg' %>);">
      <div class="agileinfo_signin">
      <h3>Sign In</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", required: "" %> 
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", required: "" %> 
          <%= f.submit "Sign in" %>
          <div class="forgot-grid">
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            <% end -%>
          <% end %>
            <div class="forgot">
              <a href="#" data-toggle="modal" data-target="#myModal2">Forgot Password?</a>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModal2" role="dialog">
              <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="w3ls-password">Get Password</h3>   
                    <p class="get-pw">Enter your email address below and we'll send you an email with instructions.</p>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "" %>
                      <%= f.submit "Send me reset password instructions" %>
                    <% end %>
                  </div>
                </div>
              </div>
              </div>
            </div>
            <div class="clearfix"> </div>
          </div>
        </form>
        <h6> Not a Member Yet? <%= link_to 'Sign Up Now', new_user_registration_path %> </h6>
      </div>
    </div>
  </section>
  <!-- //sign in form -->
