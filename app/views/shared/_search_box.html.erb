<div class="select-box">
	<%= form_for(search) do |form| %>
	<div class="select-city-for-local-ads ads-list">
		<%= form.label :select_your_city_to_see_local_ads %>
		<%= form.collection_select :city_id, City.all, :id, :name, include_blank: true %>
	</div>
	<div class="browse-category ads-list">
		<%= form.label :browse_categories %>
		<%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
	</div>
	<div class="search-product ads-list">
		<%= form.label :Search_for_a_specific_product %>
		<div class="search">
			<div id="custom-search-input">
			<div class="input-group">
				<%= form.text_field :keywords, class: "form-control input-lg", placeholder: "Search product here..." %>
				<span class="input-group-btn">
					<button class="btn btn-info btn-lg" type="submit">
						<i class="glyphicon glyphicon-search"></i>
					</button>
				</span>
			</div>
		</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<% end %>
</div>