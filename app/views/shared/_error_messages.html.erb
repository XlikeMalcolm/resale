<% if @advert.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@advert.errors.count, "error") %>.
    </div>
    <ul class="alert alert-danger">
    <% @advert.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>